<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.RoleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RoleServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

<servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


</web-app>