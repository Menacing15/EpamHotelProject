<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/welcome.jsp</welcome-file>
    </welcome-file-list>

    <!--SERVLETS-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.RoleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RoleServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.RoomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/home/rooms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/home/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditRoomServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.EditRoomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditRoomServlet</servlet-name>
        <url-pattern>/home/rooms/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddRoomServlet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.AddRoomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddRoomServlet</servlet-name>
        <url-pattern>/home/rooms/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChooseRoomSerlvet</servlet-name>
        <servlet-class>ua.aleksandr.hotelproject.controller.ChooseRoomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChooseRoomSerlvet</servlet-name>
        <url-pattern>/home/rooms/choose</url-pattern>
    </servlet-mapping>

    <!--FILTERS-->
    <!--<filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ua.aleksandr.hotelproject.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>ua.aleksandr.hotelproject.filter.AccessFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/home/rooms/*</url-pattern>
    </filter-mapping>

    <!--ERROR-->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>405</error-code>
        <location>/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

</web-app>

